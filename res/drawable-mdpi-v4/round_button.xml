<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#88446def" />
            <stroke android:width="1.0dip" android:color="#ff2f6699" />
            <corners android:radius="30.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#88449def" android:endColor="#882f6699" android:angle="270.0" />
            <stroke android:width="1.0dip" android:color="#ff2f6699" />
            <corners android:radius="30.0dip" />
        </shape>
    </item>
</selector>