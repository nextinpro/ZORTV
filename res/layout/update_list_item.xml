<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:padding="16.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1.0">
            <TextView android:textAppearance="?android:textAppearanceLarge" android:id="@id/update_item_name" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Update name" />
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:textAppearance="?android:textAppearanceSmall" android:id="@id/update_item_size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Update size" />
                <TextView android:textAppearance="?android:textAppearanceSmall" android:id="@id/update_item_timestamp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Update date" />
            </LinearLayout>
        </LinearLayout>
        <TextView android:id="@id/btn_show_update_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_update_action_show_info" android:layout_weight="0.0" style="@style/Base.Widget.AppCompat.Button" />
        <TextView android:id="@id/btn_install_update" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_update_action_install" android:layout_weight="0.0" style="@style/Base.Widget.AppCompat.Button" />
        <TextView android:id="@id/btn_ignore_update" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_update_action_ignore" android:layout_weight="0.0" style="@style/Base.Widget.AppCompat.Button" />
    </LinearLayout>
    <TextView android:id="@id/app_update_news" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Some news" />
</LinearLayout>